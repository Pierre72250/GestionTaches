{% extends 'base.html.twig' %}

{% block headerBackground %}
    <div class="navbarFixeDefault"></div>
{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px; margin-bottom: 80px;">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="card card-signup">
                    <div class="header header-primary text-center">
                        <h4>Profil</h4>
                    </div>
                    <div class="content">

                        {% if app.request.hasPreviousSession %}
                            {% for type, messages in app.session.flashbag.all() %}
                                {% for message in messages %}
                                    <div class="flash-{{ type }}">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        {% endif %}

                        <div>
                            {% block fos_user_content %}
                            {% endblock fos_user_content %}
                        </div>

                        <div class="fos_user_user_show">
                            {% if user.prenom %}
                                <p>{{ 'profile.show.prenom'|trans }}: {{ user.prenom }}</p>
                            {% endif %}
                            {% if user.prenom %}
                                <p>{{ 'profile.show.nom'|trans }}: {{ user.nom }}</p>
                            {% endif %}
                            {% if user.prenom %}
                                <p>{{ 'profile.show.telephone'|trans }}: {{ user.telephone }}</p>
                            {% endif %}
                            <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
