{% extends 'base.html.twig' %}

{% block headerBackground %}
    <div class="navbarFixeDefault"></div>
{% endblock %}

{% block body %}

<div class="container" style="margin-top: 100px; margin-bottom: 80px;">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="card card-signup">
                <div class="header header-primary text-center">
                    <h4>{% block fos_user_title %}{% endblock fos_user_title %}</h4>
                    <div class="social-line">
                    </div>
                </div>
                <p class="text-divider">
                    {% block fos_user_subtitle %}{% endblock fos_user_subtitle %}
                </p>
                <div class="content">



                    {% if app.request.hasPreviousSession %}
                        {% for type, messages in app.session.flashbag.all() %}
                            {% for message in messages %}
                                <div class="flash-{{ type }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endif %}

                    <div>
                        {% block fos_user_content %}
                        {% endblock fos_user_content %}
                    </div>

                    <!-- If you want to add a checkbox to this form, uncomment this code

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="optionsCheckboxes" checked>
                            Subscribe to newsletter
                        </label>
                    </div> -->
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
