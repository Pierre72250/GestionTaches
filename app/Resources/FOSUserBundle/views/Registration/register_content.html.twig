{% trans_default_domain 'AppBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

    <div class="form-group label-floating">
        <label class="control-label" for="email">Adresse email *</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group label-floating">
        <label class="control-label" for="username">Nom d'utilisateur *</label>
        {{ form_widget(form.username, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group label-floating">
        <label class="control-label" for="plainPasswordfirst">Mot de passe *</label>
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group label-floating">
        <label class="control-label" for="plainPasswordsecond">Confirmation du mot de passe *</label>
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="text-center">
        {{ form_widget(form.validation, {'attr': {'class': 'btn btn-simple btn-primary btn-lg'} }) }}
    </div>

{{ form_end(form) }}